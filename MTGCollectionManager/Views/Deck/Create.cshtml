@model MTGCollectionManager.Models.Decks.DeckAdd

@{
    ViewData["Title"] = "Deck Add";
}

<body style="background-color: ghostwhite">

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="container">
    <form method="post" asp-action="Create">
        <div class="form-group">
            <label for="Name">Deck Name</label>
            <input class="form-control" name="Name" placeholder="Obeka's time trip'" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Format">Format</label>
            <input class="form-control" name="Format" placeholder="Commander" />
            <span asp-validation-for="Format" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-block mt-2">Create</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>